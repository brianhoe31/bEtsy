<%- include("../../partials/adminheader") %>

    <div class="container">
        <h5 class="card-title text-center">Add New Product</h5>
        <form action="/admin/products/new" method="post">
            <div class="form-group">
                <label for="name">Product Name:</label>
                <input type="text" name="name" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="description">Description:</label>
                <input type="text" name="description" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="">Category:</label>
                <select class="form-control" name="category">
                  <option>Pants</option>
                  <option>Skirt</option>
                  <option>Shorts</option>
                  <option>Jeans</option>
                  <option>Sweater</option>
                </select>
                <button class="btn btn-danger" type="button" aria-expanded="false">+</button>
              </div>
            <div class="form-group">
                <label for="images">Images:</label>
                <button class="btn btn-primary" type="button" aria-expanded="false">UPLOAD</button>
            </div>

            <button type="submit" class="btn btn-primary">Add Product</button>
        </form>
    </div>

    <%- include("../../partials/footer") %>