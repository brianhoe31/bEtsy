<%- include("../../partials/adminheader") %>

<div class="container product_index">
    <h1>Product Inventory</h1>
    <div class="row justify-content-between">
        <form class="form-inline">
            <input class="form-control" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success col-3" type="submit">Search</button>
        </form>
        <div class="form-group col-2">
            <a href="/admin/products/new"><button class="btn btn-success col-12">Add Product</button></a>
        </div>
    </div>
    <div class="row">
      <table class="table-striped">
         <thead>
             <tr>
                 <th scope="col">IMAGE</th>
                 <th scope="col">ID</th>
                 <th scope="col">NAME</th>
                 <th scope="col">CATEGORY</th>
                 <th scope="col">INVENTORY AMT</th>
                 <th scope="col">ACTION</th>
             </tr>
         </thead>
         <tbody>

             <% for(let i= (page - 1) * 10; i< page * 10; i++){ %>
                 <tr>
                     <td><img src="../../../public/images/<%= products[i].image %>"
                             alt=""></td>
                     <td>
                        <%= products[i].id %>
                     </td>
                     <td>
                         <%= products[i].product %>
                     </td>
                     <td>
                         <%= products[i].category %>
                     </td>
                     <td>
                         <%= products[i].inventory %>
                     </td>
                     <td><a href="/admin/products/edit/<%= products[i].id %>">EDIT</a> | <a href="/admin/products/delete/<%= products[i].id %>" class="delete_btn">DELETE</a></td>
                 </tr>
                 <% } %>
         </tbody>
     </table>
     <div> 
         <p>Page: <a href="/admin/products/page=<%= 1 %>"><%= 1 %></a>
             <% for(var i=2; i<Math.ceil((products.length)/10)+1; i++){ %>
                 |<a href="/admin/products/page=<%= i %>"><%= i %></a>
             <% } %> 
     
         </p>
     </div>
    </div>
    <div class="delete_form">
      <!-- confirm delete form partial goes here -->
    </div>
    
</div>

<script src="../../public/jquery/admin_products.js"></script>
<%- include("../../partials/footer") %>

