<form action="/admin/products/delete/<%= product[0].id %>" method="post" class="delete">
    <table>
        <tr>
            <td>ID:</td>
            <td><%= product[0].id %></td>
        </tr>
        <tr>
            <td>Name:</td>
            <td><%= product[0].name %></td>
        </tr>
        <tr>
            <td>Inventory Amt:</td>
            <td><%= product[0].inventory %></td>
        </tr>
        <tr>
            <td>Category:</td>
            <td><%= product[0].category %></td>
        </tr>
        <tr>
            <td>
                Images: 
            </td>
            <td>
                <img src="https://images.unsplash.com/photo-1589359096049-85292b87bf51?ixid=MXwxMjA3fDB8MHxzZWFyY2h8Nnx8Y2FzaG1lcmUlMjBzd2VhdGVyfGVufDB8fDB8&ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60" alt="">
                <img src="https://images.unsplash.com/photo-1589359096049-85292b87bf51?ixid=MXwxMjA3fDB8MHxzZWFyY2h8Nnx8Y2FzaG1lcmUlMjBzd2VhdGVyfGVufDB8fDB8&ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60" alt="">
            </td>
        </tr>
    </table>
    <div>
        <label for="delete">Confirm Delete:</label>
        <input class="btn btn-danger" type="submit" value="DELETE">
        <input class="btn btn-warning cancel" value="Cancel">
    </div>

</form>

